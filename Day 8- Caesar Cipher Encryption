# Create a function called greet(). 
# Write 3 print statements inside the function.
# Call the greet() function and run your code.
def greet():
  print("Hello")
  print("How are you?")
  print("Isn't the weather nice today?")

greet()

#Function that aalow for input
def greet_with_name(name):
  print(f"Hello {name}")
  print(f"How are you {name}?")

greet_with_name("Yuvraj")

def greet_with(name, location):
  print(f"Hello {name}")
  print(f"What is it like in {location}?")

greet_with("Uv","Pune")

#Function with keyword arguments
def greet_with(name, location):
  print(f"Hello {name}")
  print(f"What is it like in {location}?")

greet_with(location="Pune", name="Uv")

# Number of cans calculator
def paint_calc(height, width, cover):
    can_calculator = (height * width) / cover
    print(f"The number of cans required: {can_calculator}")

# Taking user input for height, width, and cover
height = int(input("Enter the height: "))
width = int(input("Enter the width: "))
cover = int(input("Enter the cover per can: "))

# Calling the function with user input
paint_calc(height, width, cover)

#Prime Number Checker
# Write your code below this line ðŸ‘‡
def prime_checker(number):
  is_prime = True
  for i in range(2, number):
    if number % i == 0:
      is_prime = False
  if is_prime:
    print(f"{number} is a prime number")
  else:
    print(f"{number} is not a prime number")

# Write your code above this line ðŸ‘†
    
#Do NOT change any of the code belowðŸ‘‡
n = int(input()) # Check this number
prime_checker(number=n)
